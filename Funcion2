#include<stdio.h>
#include<stdlib.h>
#include<string.h>
#include<math.h>
#define N  100

int V[N];
int insertarArreglo(){
int i=0;
int numero=0;

 FILE *archivo;
	char caracter[N];
	char *caracterSplit;

 
	archivo = fopen("pene.txt","r");
 
	if (archivo == NULL){
 
		printf("\nError de apertura del archivo. \n\n");
        
        }else{
        	
      			
      			
	    			while (fscanf(archivo,"%[^\n]%*[\n]",caracter) != EOF){


	    				 if (1 == sscanf(caracter,"%d",&numero))
                                  {
                                          
                                          printf("%d\n",numero);
                                          V[i]=numero;
	    								  i++;
                                  }
	    				
	    				
					
	    			}
	   			
        	}
        fclose(archivo);
        
       

        int largo;
        largo = i;

return largo;

}


float moduloArreglo(int largo){
int i=0;
float modulo=0;
		while(i<largo){

			modulo = modulo + (V[i]*V[i]);

			i++;
		}	
		//printf("%d\n",modulo );
		modulo = sqrt(modulo);

return modulo;
}

float funcionOp(float limite){
	float resultado=0;
	int i;
		for (i = 0; i < limite; i++)
		{
			resultado = resultado + (V[i]*V[i+1]);
			
		}


	return resultado;
}
int main()
{	
	int superLargo = insertarArreglo();
	float supermodulo= moduloArreglo(superLargo);
	printf("%f\n",supermodulo );
	float superResultado= funcionOp(supermodulo);
	printf("%f\n",superResultado );
	return 0;
}
